---
interface Props {
  editor: 'slate' | 'prosemirror' | 'draftjs' | 'custom';
  title: string;
  description?: string;
  code: string;
  features?: string[];
}

const { editor, title, description, code, features = [] } = Astro.props;

// Editor-specific color themes
const editorThemes = {
  slate: {
    bg: 'bg-purple-100 dark:bg-purple-900/20',
    border: 'border-purple-500 dark:border-purple-700',
    text: 'text-purple-800 dark:text-purple-200',
    codeBg: 'bg-purple-50 dark:bg-purple-950/30',
    badge: 'bg-purple-200 dark:bg-purple-800 text-purple-900 dark:text-purple-100',
  },
  prosemirror: {
    bg: 'bg-blue-100 dark:bg-blue-900/20',
    border: 'border-blue-500 dark:border-blue-700',
    text: 'text-blue-800 dark:text-blue-200',
    codeBg: 'bg-blue-50 dark:bg-blue-950/30',
    badge: 'bg-blue-200 dark:bg-blue-800 text-blue-900 dark:text-blue-100',
  },
  draftjs: {
    bg: 'bg-green-100 dark:bg-green-900/20',
    border: 'border-green-500 dark:border-green-700',
    text: 'text-green-800 dark:text-green-200',
    codeBg: 'bg-green-50 dark:bg-green-950/30',
    badge: 'bg-green-200 dark:bg-green-800 text-green-900 dark:text-green-100',
  },
  custom: {
    bg: 'bg-gray-100 dark:bg-gray-900/20',
    border: 'border-gray-500 dark:border-gray-700',
    text: 'text-gray-800 dark:text-gray-200',
    codeBg: 'bg-gray-50 dark:bg-gray-950/30',
    badge: 'bg-gray-200 dark:bg-gray-800 text-gray-900 dark:text-gray-100',
  },
};

const theme = editorThemes[editor];
const editorNames = {
  slate: 'Slate.js',
  prosemirror: 'ProseMirror',
  draftjs: 'Draft.js',
  custom: 'Custom Editor',
};
---

<div class={`my-6 p-4 ${theme.bg} rounded-lg border ${theme.border}`}>
  <div class="flex items-center gap-2 mb-3">
    <span class={`px-2 py-1 rounded text-xs font-semibold ${theme.badge}`}>
      {editorNames[editor]}
    </span>
    <h4 class={`text-[0.95rem] m-0 font-semibold ${theme.text}`}>
      {title}
    </h4>
  </div>
  
  {description && (
    <p class={`m-0 mb-3 text-[0.9rem] ${theme.text}`}>
      {description}
    </p>
  )}
  
  <pre class={`${theme.codeBg} border ${theme.border} rounded-md p-3 overflow-x-auto text-sm leading-relaxed text-text-primary m-0 mb-3`}>
    <code>{code}</code>
  </pre>
  
  {features.length > 0 && (
    <ul class={`m-0 pl-6 text-[0.9rem] ${theme.text}`}>
      {features.map((feature) => (
        <li class="mb-2" set:html={feature}></li>
      ))}
    </ul>
  )}
</div>

