---
interface Props {
  type?: 'info' | 'warning' | 'error' | 'success';
  title?: string;
  class?: string;
}

const { type = 'info', title, class: className = '' } = Astro.props;

const themes = {
  info: {
    bg: 'bg-blue-100 dark:bg-blue-900/20',
    border: 'border-blue-500 dark:border-blue-700',
    text: 'text-blue-800 dark:text-blue-200',
    title: 'text-blue-800 dark:text-blue-200',
  },
  warning: {
    bg: 'bg-yellow-100 dark:bg-yellow-900/20',
    border: 'border-yellow-500 dark:border-yellow-700',
    text: 'text-yellow-800 dark:text-yellow-200',
    title: 'text-yellow-800 dark:text-yellow-200',
  },
  error: {
    bg: 'bg-red-100 dark:bg-red-900/20',
    border: 'border-red-500 dark:border-red-700',
    text: 'text-red-800 dark:text-red-200',
    title: 'text-red-800 dark:text-red-200',
  },
  success: {
    bg: 'bg-green-100 dark:bg-green-900/20',
    border: 'border-green-500 dark:border-green-700',
    text: 'text-green-800 dark:text-green-200',
    title: 'text-green-800 dark:text-green-200',
  },
};

const theme = themes[type];
---

<div class={`my-6 p-4 ${theme.bg} border ${theme.border} rounded-lg ${className}`}>
  {title && (
    <h4 class={`text-[0.95rem] m-0 mb-3 font-semibold ${theme.title}`}>
      {title}
    </h4>
  )}
  <div class={`text-[0.9rem] ${theme.text}`}>
    <slot />
  </div>
</div>

