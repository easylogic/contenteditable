---
interface Props {
  filePath: string;
  label?: string;
}

const { filePath, label = 'Edit on GitHub' } = Astro.props;

const GITHUB_REPO = 'easylogic/contenteditable';
const GITHUB_BRANCH = 'main';
const editUrl = `https://github.com/${GITHUB_REPO}/edit/${GITHUB_BRANCH}/${filePath}`;
---

<a
  href={editUrl}
  target="_blank"
  rel="noopener noreferrer"
  class="inline-flex items-center gap-2 px-3 py-1.5 text-sm font-medium text-text-secondary border border-border-light rounded-lg bg-bg-surface hover:border-accent-primary hover:text-accent-primary hover:bg-bg-muted transition-all no-underline"
  title={`Edit ${filePath} on GitHub`}
>
  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
  </svg>
  <span>{label}</span>
</a>

