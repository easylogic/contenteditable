import DocSection from '../../../components/docs/DocSection.astro';
import DocAlert from '../../../components/docs/DocAlert.astro';
import '../../../styles/global.css';

const headings = [
  { depth: 2, slug: 'schema', text: 'Schema Definition' },
  { depth: 2, slug: 'model', text: 'Model Representation' },
  { depth: 2, slug: 'serialization', text: 'HTML Serialization' },
  { depth: 2, slug: 'deserialization', text: 'HTML Deserialization' },
  { depth: 2, slug: 'view-integration', text: 'View Integration' },
  { depth: 2, slug: 'common-issues', text: 'Common Issues' },
  { depth: 2, slug: 'implementation', text: 'Implementation' },
];
---

<html lang="en">
  <head>
    <BaseHead
      title="Card Body Node Type – contenteditable.lab"
      description="Detailed guide for Card Body node type: schema, model, HTML mapping, view integration, and common issues"
    />
  </head>
  <body>
    <SiteNav />
    <main class="flex max-w-full m-0 p-0">
      <section class="flex-1 flex max-w-[1120px] mx-auto py-7 px-5 pb-10 gap-6 w-full">
        <div class="flex-1">
          <header class="mb-8">
            <nav class="mb-4 text-sm">
              <a href="/" class="text-text-muted no-underline">Home</a>
              <span class="text-text-faint mx-2">/</span>
              <a href="/model-schema" class="text-text-muted no-underline">Model/Schema</a>
              <span class="text-text-faint mx-2">/</span>
              <a href="/model-schema/node-types" class="text-text-muted no-underline">Node Types</a>
              <span class="text-text-faint mx-2">/</span>
              <span class="text-text-primary">Card Body</span>
            </nav>
            <h1 class="text-3xl leading-tight m-0 mb-2">
              Card Body Node Type
            </h1>
            <p class="m-0 text-[0.95rem] text-text-secondary">
              Category: Complex • Detailed implementation guide with view integration notes
            </p>
          </header>

          <article class="rounded-xl border border-border-light bg-bg-surface p-6 px-7 text-[0.9rem] leading-[1.7]">
            <DocSection id="schema" title="Schema Definition">
              <p class="m-0 mb-3">
                Schema definition for the <strong>Card Body</strong> node type:
              </p>
              <DocCodeBlock code={`{
  cardBody: {
    content: 'block+',
  }
}`} />
            </DocSection>

            <DocSection id="model" title="Model Representation">
              <p class="m-0 mb-3">
                Example model representation:
              </p>
              <DocCodeBlock code={`{
  type: 'cardBody',
  children: [
    {
      type: 'paragraph',
      children: [{ type: 'text', text: 'Card content' }]
    }
  ]
}`} />
            </DocSection>

            <DocSection id="serialization" title="HTML Serialization">
              <p class="m-0 mb-3">
                Converting model to HTML:
              </p>
              <DocCodeBlock code={`function serializeCardBody(node) {
  return '<div data-type="card-body" class="card-body">' + 
         serializeChildren(node.children) + '</div>';
}`} />
            </DocSection>

            <DocSection id="deserialization" title="HTML Deserialization">
              <p class="m-0 mb-3">
                Parsing HTML to model:
              </p>
              <DocCodeBlock code={`function parseCardBody(domNode) {
  return {
    type: 'cardBody',
    children: Array.from(domNode.childNodes)
      .map(node => parseNode(node))
      .filter(Boolean)
  };
}`} />
            </DocSection>

            <DocSection id="view-integration" title="View Integration">
              <DocAlert type="info">
                <strong>View Integration Notes:</strong> Pay special attention to contenteditable behavior, selection handling, and event management when implementing this node type in your view layer.
              </DocAlert>
              <p class="m-0 mb-3">
                View integration code:
              </p>
              <DocCodeBlock code={`// Rendering card body
const body = document.createElement('div');
body.setAttribute('data-type', 'card-body');
body.className = 'card-body';
body.contentEditable = 'true';
node.children.forEach(child => {
  body.appendChild(renderNode(child));
});`} />
            </DocSection>

            <DocSection id="common-issues" title="Common Issues">
              <DocAlert type="warning">
                <strong>Common Pitfalls:</strong> These are issues frequently encountered when implementing this node type. Review carefully before implementation.
              </DocAlert>
              <p class="m-0 mb-3">
                Common issues and solutions:
              </p>
              <DocCodeBlock code={`// Issue: Empty body
// Solution: Ensure at least one block
function validateCardBody(body) {
  if (!body.querySelector('p, ul, ol, h1, h2, h3, h4, h5, h6')) {
    const p = document.createElement('p');
    body.appendChild(p);
  }
}`} />
            </DocSection>

            <DocSection id="implementation" title="Implementation">
              <p class="m-0 mb-3">
                Complete implementation example:
              </p>
              <DocCodeBlock code={`class CardBodyNode {
  constructor(children) {
    this.type = 'cardBody';
    this.children = children || [];
  }
  
  toDOM() {
    const body = document.createElement('div');
    body.setAttribute('data-type', 'card-body');
    body.className = 'card-body';
    this.children.forEach(child => {
      body.appendChild(child.toDOM());
    });
    return body;
  }
  
  static fromDOM(domNode) {
    return new CardBodyNode(
      Array.from(domNode.childNodes)
        .map(node => parseNode(node))
        .filter(Boolean)
    );
  }
}`} />
            </DocSection>
          </article>
        </div>
        <TableOfContents headings={headings} />
      </section>
    </main>
  </body>
</html>
