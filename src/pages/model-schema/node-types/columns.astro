import DocAlert from '../../../components/docs/DocAlert.astro';
import '../../../styles/global.css';

const headings = [
  { depth: 2, slug: 'schema', text: 'Schema Definition' },
  { depth: 2, slug: 'model', text: 'Model Representation' },
  { depth: 2, slug: 'serialization', text: 'HTML Serialization' },
  { depth: 2, slug: 'deserialization', text: 'HTML Deserialization' },
  { depth: 2, slug: 'view-integration', text: 'View Integration' },
  { depth: 2, slug: 'common-issues', text: 'Common Issues' },
  { depth: 2, slug: 'implementation', text: 'Implementation' },
];
---

<html lang="en">
  <head>
    <BaseHead
      title="Columns Node Type – contenteditable.lab"
      description="Detailed guide for Columns node type: schema, model, HTML mapping, view integration, and common issues"
    />
  </head>
  <body>
    <SiteNav />
    <main class="flex max-w-full m-0 p-0">
      <section class="flex-1 flex max-w-[1120px] mx-auto py-7 px-5 pb-10 gap-6 w-full">
        <div class="flex-1">
          <header class="mb-8">
            <nav class="mb-4 text-sm">
              <a href="/" class="text-text-muted no-underline">Home</a>
              <span class="text-text-faint mx-2">/</span>
              <a href="/model-schema" class="text-text-muted no-underline">Model/Schema</a>
              <span class="text-text-faint mx-2">/</span>
              <a href="/model-schema/node-types" class="text-text-muted no-underline">Node Types</a>
              <span class="text-text-faint mx-2">/</span>
              <span class="text-text-primary">Columns</span>
            </nav>
            <h1 class="text-3xl leading-tight m-0 mb-2">
              Columns Node Type
            </h1>
            <p class="m-0 text-[0.95rem] text-text-secondary">
              Category: Complex • Detailed implementation guide with view integration notes
            </p>
          </header>

          <article class="rounded-xl border border-border-light bg-bg-surface p-6 px-7 text-[0.9rem] leading-[1.7]">
            <DocSection id="schema" title="Schema Definition">
              <p class="m-0 mb-3">
                Schema definition for the <strong>Columns</strong> node type:
              </p>
              <DocCodeBlock code={`{
  columns: {
    content: 'block+',
    group: 'block',
    attrs: {
      count: { default: 2 }
    },
  }
}`} />
            </DocSection>

            <DocSection id="model" title="Model Representation">
              <p class="m-0 mb-3">
                Example model representation:
              </p>
              <DocCodeBlock code={`{
  type: 'columns',
  attrs: { count: 2 },
  children: [
    {
      type: 'paragraph',
      children: [{ type: 'text', text: 'Column 1' }]
    },
    {
      type: 'paragraph',
      children: [{ type: 'text', text: 'Column 2' }]
    }
  ]
}`} />
            </DocSection>

            <DocSection id="serialization" title="HTML Serialization">
              <p class="m-0 mb-3">
                Converting model to HTML:
              </p>
              <DocCodeBlock code={`function serializeColumns(node) {
  return '<div data-type="columns" data-count="' + node.attrs.count + '">' + 
         serializeChildren(node.children) + '</div>';
}`} />
            </DocSection>

            <DocSection id="deserialization" title="HTML Deserialization">
              <p class="m-0 mb-3">
                Parsing HTML to model:
              </p>
              <DocCodeBlock code={`function parseColumns(domNode) {
  return {
    type: 'columns',
    attrs: { count: parseInt(domNode.getAttribute('data-count')) || 2 },
    children: Array.from(domNode.childNodes)
      .map(node => parseNode(node))
      .filter(Boolean)
  };
}`} />
            </DocSection>

            <DocSection id="view-integration" title="View Integration">
              <DocAlert type="info">
                <strong>View Integration Notes:</strong> Pay special attention to contenteditable behavior, selection handling, and event management when implementing this node type in your view layer.
              </DocAlert>
              <p class="m-0 mb-3">
                View integration code:
              </p>
              <DocCodeBlock code={`// Rendering columns
const columns = document.createElement('div');
columns.setAttribute('data-type', 'columns');
columns.setAttribute('data-count', node.attrs.count);
columns.className = 'columns';
columns.style.display = 'grid';
columns.style.gridTemplateColumns = 'repeat(' + node.attrs.count + ', 1fr)';
columns.contentEditable = 'true';
node.children.forEach(child => {
  columns.appendChild(renderNode(child));
});`} />
            </DocSection>

            <DocSection id="common-issues" title="Common Issues">
              <DocAlert type="warning">
                <strong>Common Pitfalls:</strong> These are issues frequently encountered when implementing this node type. Review carefully before implementation.
              </DocAlert>
              <p class="m-0 mb-3">
                Common issues and solutions:
              </p>
              <DocCodeBlock code={`// Issue: Column count mismatch
// Solution: Ensure children match column count
function validateColumns(columns, count) {
  const children = columns.children;
  while (children.length < count) {
    const col = document.createElement('div');
    col.className = 'column';
    columns.appendChild(col);
  }
  while (children.length > count) {
    columns.removeChild(children[children.length - 1]);
  }
}

// Issue: Responsive columns
// Solution: Use CSS Grid or Flexbox
function makeColumnsResponsive(columns) {
  columns.style.display = 'grid';
  columns.style.gridTemplateColumns = 'repeat(auto-fit, minmax(200px, 1fr))';
}`} />
            </DocSection>

            <DocSection id="implementation" title="Implementation">
              <p class="m-0 mb-3">
                Complete implementation example:
              </p>
              <DocCodeBlock code={`class ColumnsNode {
  constructor(attrs, children) {
    this.type = 'columns';
    this.attrs = { count: attrs?.count || 2 };
    this.children = children || [];
  }
  
  toDOM() {
    const columns = document.createElement('div');
    columns.setAttribute('data-type', 'columns');
    columns.setAttribute('data-count', this.attrs.count);
    columns.className = 'columns';
    this.children.forEach(child => {
      columns.appendChild(child.toDOM());
    });
    return columns;
  }
  
  static fromDOM(domNode) {
    return new ColumnsNode(
      { count: parseInt(domNode.getAttribute('data-count')) || 2 },
      Array.from(domNode.childNodes)
        .map(node => parseNode(node))
        .filter(Boolean)
    );
  }
}`} />
            </DocSection>
          </article>
        </div>
        <TableOfContents headings={headings} />
      </section>
    </main>
  </body>
</html>
