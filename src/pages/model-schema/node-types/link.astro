---
import SiteNav from '../../../components/SiteNav.astro';
import BaseHead from '../../../components/BaseHead.astro';
import TableOfContents from '../../../components/TableOfContents.astro';
import DocCodeBlock from '../../../components/docs/DocCodeBlock.astro';
import DocSection from '../../../components/docs/DocSection.astro';
import DocAlert from '../../../components/docs/DocAlert.astro';
import '../../../styles/global.css';

const headings = [
  { depth: 2, slug: 'schema', text: 'Schema Definition' },
  { depth: 2, slug: 'model', text: 'Model Representation' },
  { depth: 2, slug: 'serialization', text: 'HTML Serialization' },
  { depth: 2, slug: 'deserialization', text: 'HTML Deserialization' },
  { depth: 2, slug: 'view-integration', text: 'View Integration' },
  { depth: 2, slug: 'common-issues', text: 'Common Issues' },
  { depth: 2, slug: 'implementation', text: 'Implementation' },
];
---

<html lang="en">
  <head>
    <BaseHead
      title="Link Node Type – contenteditable.lab"
      description="Detailed guide for Link node type: schema, model, HTML mapping, view integration, and common issues"
    />
  </head>
  <body>
    <SiteNav />
    <main class="flex max-w-full m-0 p-0">
      <section class="flex-1 flex max-w-[1120px] mx-auto py-7 px-5 pb-10 gap-6 w-full">
        <div class="flex-1">
          <header class="mb-8">
            <nav class="mb-4 text-sm">
              <a href="/" class="text-text-muted no-underline">Home</a>
              <span class="text-text-faint mx-2">/</span>
              <a href="/model-schema" class="text-text-muted no-underline">Model/Schema</a>
              <span class="text-text-faint mx-2">/</span>
              <a href="/model-schema/node-types" class="text-text-muted no-underline">Node Types</a>
              <span class="text-text-faint mx-2">/</span>
              <span class="text-text-primary">Link</span>
            </nav>
            <h1 class="text-3xl leading-tight m-0 mb-2">
              Link Node Type
            </h1>
            <p class="m-0 text-[0.95rem] text-text-secondary">
              Category: Formatting • Detailed implementation guide with view integration notes
            </p>
          </header>

          <article class="rounded-xl border border-border-light bg-bg-surface p-6 px-7 text-[0.9rem] leading-[1.7]">
            <DocSection id="schema" title="Schema Definition">
              <p class="m-0 mb-3">
                Schema definition for the <strong>Link</strong> mark type:
              </p>
              <DocCodeBlock language="typescript" code={`{
  link: {
    attrs: {
      href: { default: '' },
      title: { default: '' }
    }
  }
}`} />
            </DocSection>

            <DocSection id="model" title="Model Representation">
              <p class="m-0 mb-3">
                Example model representation:
              </p>
              <DocCodeBlock language="typescript" code={`{
  type: 'text',
  text: 'Click here',
  marks: [{
    type: 'link',
    attrs: { href: 'https://example.com', title: 'Example' }
  }]
}`} />
            </DocSection>

            <DocSection id="serialization" title="HTML Serialization">
              <p class="m-0 mb-3">
                Converting model to HTML:
              </p>
              <DocCodeBlock language="typescript" code={`function serializeLinkMark(text, mark) {
  const href = escapeHtml(mark.attrs?.href || '');
  const title = mark.attrs?.title ? 
    ' title="' + escapeHtml(mark.attrs.title) + '"' : '';
  return '<a href="' + href + '"' + title + '>' + text + '</a>';
}`} />
            </DocSection>

            <DocSection id="deserialization" title="HTML Deserialization">
              <p class="m-0 mb-3">
                Parsing HTML to model:
              </p>
              <DocCodeBlock language="typescript" code={`function extractLinkMark(element) {
  if (element.tagName === 'A' && element.hasAttribute('href')) {
    return {
      type: 'link',
      attrs: {
        href: element.getAttribute('href') || '',
        title: element.getAttribute('title') || ''
      }
    };
  }
  return null;
}`} />
            </DocSection>

            <DocSection id="view-integration" title="View Integration">
              <DocAlert type="info">
                <strong>View Integration Notes:</strong> Pay special attention to contenteditable behavior, selection handling, and event management when implementing this node type in your view layer.
              </DocAlert>
              <p class="m-0 mb-3">
                View integration code:
              </p>
              <DocCodeBlock language="typescript" code={`// Creating/editing links
function createLink(url, text) {
  return {
    type: 'text',
    text: text,
    marks: [{
      type: 'link',
      attrs: { href: url }
    }]
  };
}

// Updating link URL
function updateLinkUrl(linkMark, newUrl) {
  return {
    ...linkMark,
    attrs: { ...linkMark.attrs, href: newUrl }
  };
}

// Link click handling
function handleLinkClick(e) {
  const link = e.target.closest('a');
  if (link && e.ctrlKey || e.metaKey) {
    // Allow default (open in new tab)
    return;
  }
  e.preventDefault();
  // Handle link navigation in editor
}`} />
            </DocSection>

            <DocSection id="common-issues" title="Common Issues">
              <DocAlert type="warning">
                <strong>Common Pitfalls:</strong> These are issues frequently encountered when implementing this node type. Review carefully before implementation.
              </DocAlert>
              <p class="m-0 mb-3">
                Common issues and solutions:
              </p>
              <DocCodeBlock language="typescript" code={`// Issue: Empty href links
// Solution: Validate href before creating link
function validateLink(link) {
  if (!link.attrs.href || link.attrs.href.trim() === '') {
    return false;
  }
  return true;
}

// Issue: Link with other marks
// Solution: Links can coexist with bold, italic, etc.
// But code mark excludes links
function canApplyLinkWithMarks(marks) {
  return !marks.some(m => m.type === 'code');
}

// Issue: Relative vs absolute URLs
// Solution: Normalize URLs
function normalizeUrl(url) {
  if (url.startsWith('http://') || url.startsWith('https://')) {
    return url;
  }
  if (url.startsWith('/')) {
    return url; // Relative to root
  }
  return 'https://' + url; // Assume external
}

// Issue: Link security (XSS)
// Solution: Sanitize href
function sanitizeUrl(url) {
  // Remove javascript:, data:, etc.
  if (url.startsWith('javascript:') || url.startsWith('data:')) {
    return '#';
  }
  return url;
}`} />
            </DocSection>

            <DocSection id="implementation" title="Implementation">
              <p class="m-0 mb-3">
                Complete implementation example:
              </p>
              <DocCodeBlock language="typescript" code={`class LinkMark {
  constructor(attrs) {
    this.type = 'link';
    this.attrs = {
      href: attrs?.href || '',
      title: attrs?.title || ''
    };
  }
  
  toDOM() {
    const attrs = {};
    if (this.attrs.href) attrs.href = this.attrs.href;
    if (this.attrs.title) attrs.title = this.attrs.title;
    return ['a', attrs, 0];
  }
  
  static fromDOM(element) {
    if (element.tagName === 'A' && element.hasAttribute('href')) {
      return new LinkMark({
        href: element.getAttribute('href') || '',
        title: element.getAttribute('title') || ''
      });
    }
    return null;
  }
}`} />
            </DocSection>
          </article>
        </div>
        <TableOfContents headings={headings} />
      </section>
    </main>
  </body>
</html>
