  constructor() {
    this.type = 'bold';
  }
  
  toDOM() {
    return ['strong', 0];
  }
  
  static fromDOM(element) {
    if (element.tagName === 'STRONG' || element.tagName === 'B') {
      return new BoldMark();
    }
    return null;
  }
}`} />
