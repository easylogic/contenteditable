// Define headings for TOC
const headings = [
  { depth: 2, slug: 'overview', text: 'Overview' },
  { depth: 2, slug: 'basic-behavior', text: 'Basic Behavior' },
  { depth: 2, slug: 'collapsed-selection', text: 'Collapsed Selection' },
  { depth: 2, slug: 'ime-composition-formatunderline', text: 'IME Composition + formatUnderline' },
  { depth: 2, slug: 'editor-specific-handling', text: 'Editor-Specific Handling' },
