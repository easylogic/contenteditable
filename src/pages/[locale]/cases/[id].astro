---
import { getCollection, getEntry } from 'astro:content';
import type { GetStaticPaths } from 'astro';
import { CasePlayground } from '../../../components/CasePlayground';
import SiteNav from '../../../components/SiteNav.astro';
import TranslationNotice from '../../../components/TranslationNotice.astro';
import '../../../styles/global.css';
import {
  locales,
  supportedLocales,
  defaultLocale,
  getTranslation,
  type Locale,
} from '../../../i18n/translations';

export const getStaticPaths = (async () => {
  const paths = [];

  // Generate paths for all non-default locales and all cases
  for (const locale of supportedLocales.filter((l) => l !== defaultLocale)) {
    const cases = await getCollection('cases', ({ data }) => data.locale === locale);
    for (const entry of cases) {
      // Remove locale suffix from slug (e.g., "ce-0040-ko" -> "ce-0040")
      let slug = entry.slug;
      if (slug.endsWith(`-${locale}`)) {
        slug = slug.slice(0, -(locale.length + 1)); // Remove "-ko" or "-en" etc.
      }
      paths.push({
        params: { locale, id: slug },
      });
    }
  }

  return paths;
}) satisfies GetStaticPaths;

const locale = Astro.params.locale as Locale;
const slug = Astro.params.id;
const t = getTranslation(locale);
const localeInfo = locales[locale];

if (!slug) {
  throw new Error('Case slug is missing in route params.');
}

// Find entry with locale suffix (e.g., "ce-0040-contenteditable-readonly-ko")
const entrySlug = `${slug}-${locale}`;
const entry = await getEntry('cases', entrySlug);

if (!entry) {
  throw new Error(`Case entry for slug "${slug}" was not found.`);
}

const allCases = await getCollection('cases', ({ data }) => data.locale === locale);
const allCasesAllLocales = await getCollection('cases'); // For sidebar - all locales

// Group cases by case ID (same case in different locales)
const casesById = allCasesAllLocales.reduce(
  (acc, c) => {
    const id = c.data.id;
    if (!acc[id]) acc[id] = [];
    acc[id].push(c);
    return acc;
  },
  {} as Record<string, typeof allCasesAllLocales>,
);

// For each case ID, pick the best locale version:
// 1. Current locale if available
// 2. Otherwise 'en'
// 3. Otherwise first available
const bestCases = Object.values(casesById).map((cases) => {
  const currentLocaleCase = cases.find((c) => c.data.locale === locale);
  const enCase = cases.find((c) => c.data.locale === 'en');
  return currentLocaleCase || enCase || cases[0];
});

// Group by scenario for sidebar
const casesByScenario = bestCases.reduce(
  (acc, c) => {
    const key = c.data.scenarioId;
    if (!acc[key]) acc[key] = [];
    acc[key].push(c);
    return acc;
  },
  {} as Record<string, typeof bestCases>,
);

const sameScenarioCases = allCases.filter(
  (c) => c.data.scenarioId === entry.data.scenarioId,
);

const { Content } = await entry.render();

// Helper for localized paths
const localePath = (path: string) => `/${locale}${path}`;
---

<html lang={locale} dir={localeInfo.dir}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{entry.data.caseTitle}</title>
  </head>
  <body>
    <SiteNav />
    <main class="case-layout">
      <aside class="case-sidebar">
        <div class="sidebar-header">
          <span class="sidebar-title">{t.nav.cases}</span>
          <a href={localePath('/cases')} class="sidebar-link">{t.caseDetail.allCases} →</a>
        </div>

        <nav class="sidebar-nav">
          {Object.entries(casesByScenario).map(([scenarioId, scenarioCases]) => (
            <div class="sidebar-group">
              <div class="sidebar-group-title">{scenarioId}</div>
              <ul class="sidebar-list">
                {scenarioCases.map((c) => {
                  // Generate URL slug (remove locale suffix for URL)
                  const urlSlug = c.slug.endsWith(`-${c.data.locale}`)
                    ? c.slug.slice(0, -(c.data.locale.length + 1))
                    : c.slug;
                  
                  // Check if this is the active case by comparing IDs
                  const isActive = entry.data.id === c.data.id;
                  
                  return (
                    <li>
                      <a
                        href={localePath(`/cases/${urlSlug}`)}
                        class:list={['sidebar-item', { active: isActive }]}
                        title={c.data.caseTitle}
                      >
                        {c.data.caseTitle}
                      </a>
                    </li>
                  );
                })}
              </ul>
            </div>
          ))}
        </nav>
      </aside>

      <section class="case-content">
        <header class="case-header">
          <p class="case-breadcrumb">
            {t.caseDetail.case} {entry.data.id} · {t.caseDetail.scenario}{' '}
            <a href={localePath(`/scenarios/${encodeURIComponent(entry.data.scenarioId)}`)}>
              {entry.data.scenarioId}
            </a>
          </p>
          <h1>{entry.data.caseTitle}</h1>

          <div class="case-meta">
            <span>{t.caseDetail.os}: {entry.data.os} {entry.data.osVersion}</span>
            <span>{t.caseDetail.device}: {entry.data.device} {entry.data.deviceVersion}</span>
            <span>{t.caseDetail.browser}: {entry.data.browser} {entry.data.browserVersion}</span>
            <span>{t.caseDetail.keyboard}: {entry.data.keyboard}</span>
            <span class={`status-badge status-${entry.data.status}`}>
              {entry.data.status === 'confirmed' ? t.caseDetail.statusConfirmed : t.caseDetail.statusDraft}
            </span>
          </div>

          {entry.data.tags.length > 0 && (
            <div class="case-tags">
              {entry.data.tags.map((tag) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          )}
        </header>

        <TranslationNotice locale={locale} contentType="case" originalPath={`/cases/${slug}`} entryLocale={entry.data.locale} />

        <article class="case-article">
          <Content />
        </article>

        {sameScenarioCases.length > 1 && (
          <section class="variants-section">
            <h2>{t.caseDetail.variants}</h2>
            <div class="variants-table-wrapper">
              <table class="variants-table">
                <thead>
                  <tr>
                    <th>{t.caseDetail.case}</th>
                    <th>{t.caseDetail.os}</th>
                    <th>{t.caseDetail.browser}</th>
                    <th>{t.caseDetail.status}</th>
                  </tr>
                </thead>
                <tbody>
                  {sameScenarioCases.map((c) => (
                    <tr class:list={{ current: c.slug === slug }}>
                      <td>
                        <a href={localePath(`/cases/${c.slug}`)}>{c.data.id}</a>
                      </td>
                      <td>{c.data.os} {c.data.osVersion}</td>
                      <td>{c.data.browser} {c.data.browserVersion}</td>
                      <td>
                        <span class={`status-badge status-${c.data.status}`}>
                          {c.data.status === 'confirmed' ? t.caseDetail.statusConfirmed : t.caseDetail.statusDraft}
                        </span>
                      </td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          </section>
        )}

        <CasePlayground
          client:load
          id={entry.data.id}
          caseTitle={entry.data.caseTitle}
          os={entry.data.os}
          osVersion={entry.data.osVersion}
          device={entry.data.device}
          deviceVersion={entry.data.deviceVersion}
          browser={entry.data.browser}
          browserVersion={entry.data.browserVersion}
          keyboard={entry.data.keyboard}
        />
      </section>
    </main>
  </body>
</html>

<style>
  .case-layout {
    display: flex;
    min-height: calc(100vh - 52px);
  }

  .case-sidebar {
    position: sticky;
    top: 52px;
    height: calc(100vh - 52px);
    width: 280px;
    min-width: 280px;
    overflow-y: auto;
    background: var(--bg-muted);
    border-right: 1px solid var(--border-light);
    flex-shrink: 0;
  }

  .sidebar-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.25rem;
    border-bottom: 1px solid var(--border-light);
    background: var(--bg-surface);
  }

  .sidebar-title {
    font-weight: 600;
    font-size: 0.95rem;
  }

  .sidebar-link {
    font-size: 0.8rem;
    color: var(--accent-primary);
  }

  .sidebar-nav {
    padding: 0.75rem 0;
  }

  .sidebar-group {
    margin-bottom: 0.75rem;
  }

  .sidebar-group-title {
    padding: 0.5rem 1.25rem;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: var(--text-muted);
  }

  .sidebar-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .sidebar-item {
    display: block;
    padding: 0.5rem 1.25rem;
    font-size: 0.85rem;
    color: var(--text-secondary);
    text-decoration: none;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    border-left: 3px solid transparent;
    transition: all 0.15s;
  }

  .sidebar-item:hover {
    background: var(--bg-muted);
    color: var(--text-primary);
  }

  .sidebar-item.active {
    background: var(--accent-primary-light);
    color: var(--accent-primary);
    border-left-color: var(--accent-primary);
    font-weight: 500;
  }

  .case-content {
    flex: 1;
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 2.5rem 3rem;
  }

  .case-header {
    margin-bottom: 1.5rem;
  }

  .case-breadcrumb {
    font-size: 0.85rem;
    color: var(--text-muted);
    margin: 0 0 0.5rem;
  }

  .case-breadcrumb a {
    color: var(--accent-primary);
  }

  .case-header h1 {
    font-size: 1.75rem;
    margin: 0 0 0.75rem;
    line-height: 1.3;
  }

  .case-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem 1rem;
    font-size: 0.8rem;
    color: var(--text-secondary);
  }

  .case-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.35rem;
    margin-top: 0.75rem;
  }

  .tag {
    padding: 0.15rem 0.5rem;
    background: var(--bg-muted);
    border-radius: 999px;
    font-size: 0.75rem;
    color: var(--text-secondary);
  }

  .status-badge {
    padding: 0.15rem 0.5rem;
    border-radius: 999px;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .status-confirmed {
    background: var(--status-confirmed-light);
    color: var(--status-confirmed);
  }

  .status-draft {
    background: var(--status-draft-light);
    color: var(--status-draft);
  }

  .case-article {
    background: var(--bg-surface);
    border: 1px solid var(--border-light);
    border-radius: 12px;
    padding: 1.5rem 1.75rem;
    font-size: 0.95rem;
    line-height: 1.7;
  }

  .case-article :global(h2) {
    font-size: 1.15rem;
    margin: 1.5rem 0 0.75rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border-light);
  }

  .case-article :global(h3) {
    font-size: 1rem;
    margin: 1.25rem 0 0.5rem;
  }

  .case-article :global(pre) {
    background: var(--bg-muted);
    color: var(--text-primary);
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    font-size: 0.85rem;
  }

  .case-article :global(code) {
    font-family: 'JetBrains Mono', 'Fira Code', monospace;
  }

  .variants-section {
    margin-top: 2rem;
    background: var(--bg-surface);
    border: 1px solid var(--border-light);
    border-radius: 12px;
    padding: 1.25rem 1.5rem;
  }

  .variants-section h2 {
    font-size: 1rem;
    margin: 0 0 1rem;
  }

  .variants-table-wrapper {
    overflow-x: auto;
  }

  .variants-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.85rem;
  }

  .variants-table th,
  .variants-table td {
    padding: 0.6rem 0.75rem;
    text-align: left;
    border-bottom: 1px solid var(--border-light);
  }

  .variants-table th {
    font-weight: 600;
    background: var(--bg-muted);
  }

  .variants-table tr.current {
    background: var(--accent-primary-light);
  }

  .variants-table a {
    color: var(--accent-primary);
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .case-layout {
      flex-direction: column;
    }

    .case-sidebar {
      position: static;
      width: 100%;
      height: auto;
      max-height: 300px;
    }

    .case-content {
      padding: 1.5rem 1rem;
    }
  }
</style>

