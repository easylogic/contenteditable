                          <td
                            style="
                              padding: 0.4rem 0.5rem;
                              border-bottom: 1px solid #e5e7eb;
                              background: #f9fafb;
                              font-weight: 600;
                              position: sticky;
                              left: 0;
                              z-index: 1;
                            "
