                    </thead>
                    <tbody>
                      {sameScenarioCases.map((c) => (
                        <tr
                          style={{
                            backgroundColor:
                              c.slug === slug ? 'rgba(17, 24, 39, 0.04)' : 'transparent',
                          }}
                        >
                          <td style="padding: 0.25rem 0.4rem;">
                            <a
                              href={`/cases/${c.slug}`}
                              style="
                                color: #111827;
                                text-decoration: none;
                              "
                            >
                              {c.data.id}
