---
import { Playground } from '../components/Playground';
import SiteNav from '../components/SiteNav.astro';
import BaseHead from '../components/BaseHead.astro';
import '../styles/global.css';

const siteTitle = 'contenteditable lab â€“ global playground';
---

<html lang="en">
  <head>
    <BaseHead title={siteTitle} description="Interactive playground to test contenteditable behavior." />
  </head>
  <body>
    <SiteNav />
    <main
      style="
        max-width: 1120px;
        margin: 0 auto;
        padding: 1.75rem 1.25rem 2.5rem;
      "
    >
      <section style="margin-bottom: 1.5rem;">
        <h1
          style="
            font-size: 2rem;
            line-height: 1.1;
            margin: 0 0 0.5rem 0;
          "
        >
          Global playground
        </h1>
        <p style="margin: 0; font-size: 0.95rem; color: var(--text-secondary);">
          Use this page to explore contenteditable behavior without a specific documented case.
        </p>
      </section>

      <Playground client:load />
    </main>
  </body>
</html>


